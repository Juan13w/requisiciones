# Configuración del servidor de correo
EMAIL_SERVER_HOST=smtp.tudominio.com  # Ejemplo: smtp.gmail.com para Gmail
EMAIL_SERVER_PORT=587                 # 587 para TLS, 465 para SSL
EMAIL_SERVER_USER=tu_correo@dominio.com
EMAIL_SERVER_PASSWORD=tu_contraseña
EMAIL_FROM=no-reply@tudominio.com     # Correo que aparecerá como remitente

# Correo al que se enviarán las notificaciones de nuevas requisiciones
NOTIFICATION_EMAIL=admin@empresa.com

# Configuración de la base de datos (si es necesario)
DATABASE_URL=mysql://usuario:contraseña@localhost:3306/requisiciones_db
